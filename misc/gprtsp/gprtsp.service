[Unit]
Description=GPRTSP
After=network.target

[Service]
Type=simple
Restart=always
RestartSec=300

ExecStart=/bin/bash '%h/.local/lib/gprtsp/gprtsp.sh' '%h/.local/lib/gprtsp/gprtsp.env'
WorkingDirectory=%h/.local/lib/gprtsp
StandardOutput=append:%h/.local/lib/gprtsp/gprtsp.log
StandardError=append:%h/.local/lib/gprtsp/gprtsp.log

[Install]
WantedBy=default.target
